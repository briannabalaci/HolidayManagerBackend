<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20210809-001" author="abuciuman">
        <createTable tableName="INVITE">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="STATUS" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="EVENT_FK" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="USER_INVITED_FK" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20210809-002" author="abuciuman">
        <addForeignKeyConstraint baseTableName="INVITE" baseColumnNames="EVENT_FK" constraintName="eventIdFK"
                                 referencedTableName="EVENT"
                                 referencedColumnNames="ID" />
    </changeSet>

    <changeSet id="20210809-003" author="abuciuman">
        <addForeignKeyConstraint baseTableName="INVITE" baseColumnNames="USER_INVITED_FK" constraintName="userInvitedIdFK"
                                 referencedTableName="USERS"
                                 referencedColumnNames="ID" />
    </changeSet>

</databaseChangeLog>