<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20210809-001" author="abuciuman">
        <createTable tableName="EVENT">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="TITLE" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="EVENT_DATE" type="TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="LOCATION" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="DRESS_CODE" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="COVER_IMAGE" type="BLOB">
                <constraints nullable="false" />
            </column>
            <column name="ORGANIZER_FK" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20210809-002" author="abuciuman">
        <addForeignKeyConstraint baseTableName="EVENT" baseColumnNames="ORGANIZER_FK" constraintName="organizerIdFK"
                                 referencedTableName="USERS"
                                 referencedColumnNames="ID" />
    </changeSet>

    <changeSet id="20210818" author="asuciu">
        <addColumn tableName="EVENT">
            <column name="TIME_LIMIT" type="INT">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20210817-002" author="mmehi">
        <modifyDataType tableName="event" columnName="cover_image" newDataType="TEXT"/>
    </changeSet>
</databaseChangeLog>